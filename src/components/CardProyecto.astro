---
// components/ProjectCard.astro

export interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  techs: string[];
}

export let title: Props['title'] = 'Proyecto Ejemplo'; // Default value to avoid undefined
export let description: Props['description'] = 'Descripci√≥n del proyecto.'; // Default value to avoid undefined
export let image: Props['image'] = '/default-image.jpg'; // Default value to avoid undefined
export let link: Props['link'] = '#'; // Default value to avoid undefined
export let techs: Props['techs'] = ['HTML', 'CSS', 'JavaScript']; // Default value to avoid undefined
---

<article class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-200">
  <a href={link} target="_blank" rel="noopener noreferrer">
    <img src={image} alt={title} class="w-full h-48 object-cover" />
  </a>
  <div class="p-4">
    <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-100">{title}</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2">
      {techs.map(tech => (
        <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs font-medium">
          {tech}
        </span>
      ))}
    </div>
  </div>
</article>
